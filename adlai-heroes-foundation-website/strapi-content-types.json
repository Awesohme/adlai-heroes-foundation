{
  "contentTypes": {
    "pages": {
      "kind": "collectionType",
      "collectionName": "pages",
      "info": {
        "singularName": "page",
        "pluralName": "pages",
        "displayName": "Page",
        "description": "Static pages like About, Contact, etc."
      },
      "options": {
        "draftAndPublish": true
      },
      "attributes": {
        "title": {
          "type": "string",
          "required": true
        },
        "slug": {
          "type": "uid",
          "targetField": "title",
          "required": true
        },
        "content": {
          "type": "richtext",
          "required": true
        },
        "metaTitle": {
          "type": "string",
          "maxLength": 60
        },
        "metaDescription": {
          "type": "text",
          "maxLength": 160
        },
        "featuredImage": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        }
      }
    },
    "programs": {
      "kind": "collectionType",
      "collectionName": "programs",
      "info": {
        "singularName": "program",
        "pluralName": "programs",
        "displayName": "Program",
        "description": "Foundation programs and initiatives"
      },
      "options": {
        "draftAndPublish": true
      },
      "attributes": {
        "title": {
          "type": "string",
          "required": true
        },
        "slug": {
          "type": "uid",
          "targetField": "title",
          "required": true
        },
        "description": {
          "type": "richtext",
          "required": true
        },
        "shortDescription": {
          "type": "text",
          "maxLength": 200
        },
        "featuredImage": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        },
        "gallery": {
          "type": "media",
          "multiple": true,
          "required": false,
          "allowedTypes": ["images"]
        },
        "category": {
          "type": "enumeration",
          "enum": ["education", "health", "empowerment", "community"],
          "default": "education"
        },
        "status": {
          "type": "enumeration",
          "enum": ["active", "completed", "upcoming"],
          "default": "active"
        },
        "beneficiaries": {
          "type": "integer",
          "min": 0
        },
        "startDate": {
          "type": "date"
        },
        "endDate": {
          "type": "date"
        },
        "location": {
          "type": "string"
        },
        "metaTitle": {
          "type": "string",
          "maxLength": 60
        },
        "metaDescription": {
          "type": "text",
          "maxLength": 160
        }
      }
    },
    "blog-posts": {
      "kind": "collectionType",
      "collectionName": "blog_posts",
      "info": {
        "singularName": "blog-post",
        "pluralName": "blog-posts",
        "displayName": "Blog Post",
        "description": "News, updates, and stories"
      },
      "options": {
        "draftAndPublish": true
      },
      "attributes": {
        "title": {
          "type": "string",
          "required": true
        },
        "slug": {
          "type": "uid",
          "targetField": "title",
          "required": true
        },
        "content": {
          "type": "richtext",
          "required": true
        },
        "excerpt": {
          "type": "text",
          "maxLength": 200,
          "required": true
        },
        "featuredImage": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        },
        "author": {
          "type": "string",
          "required": true,
          "default": "Adlai Heroes Foundation"
        },
        "readTime": {
          "type": "integer",
          "min": 1,
          "default": 5
        },
        "category": {
          "type": "string"
        },
        "tags": {
          "type": "json"
        },
        "isFeatured": {
          "type": "boolean",
          "default": false
        },
        "metaTitle": {
          "type": "string",
          "maxLength": 60
        },
        "metaDescription": {
          "type": "text",
          "maxLength": 160
        }
      }
    },
    "board-members": {
      "kind": "collectionType",
      "collectionName": "board_members",
      "info": {
        "singularName": "board-member",
        "pluralName": "board-members",
        "displayName": "Board Member",
        "description": "Leadership team and board members"
      },
      "options": {
        "draftAndPublish": false
      },
      "attributes": {
        "name": {
          "type": "string",
          "required": true
        },
        "position": {
          "type": "string",
          "required": true
        },
        "bio": {
          "type": "richtext",
          "required": true
        },
        "profileImage": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        },
        "email": {
          "type": "email"
        },
        "linkedIn": {
          "type": "string"
        },
        "twitter": {
          "type": "string"
        },
        "order": {
          "type": "integer",
          "default": 0
        },
        "isActive": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "testimonials": {
      "kind": "collectionType",
      "collectionName": "testimonials",
      "info": {
        "singularName": "testimonial",
        "pluralName": "testimonials",
        "displayName": "Testimonial",
        "description": "Community feedback and testimonials"
      },
      "options": {
        "draftAndPublish": true
      },
      "attributes": {
        "quote": {
          "type": "text",
          "required": true
        },
        "author": {
          "type": "string",
          "required": true
        },
        "position": {
          "type": "string"
        },
        "organization": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "image": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        },
        "rating": {
          "type": "integer",
          "min": 1,
          "max": 5,
          "default": 5
        },
        "isFeatured": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "impact-stats": {
      "kind": "collectionType",
      "collectionName": "impact_stats",
      "info": {
        "singularName": "impact-stat",
        "pluralName": "impact-stats",
        "displayName": "Impact Statistic",
        "description": "Key metrics and achievements"
      },
      "options": {
        "draftAndPublish": false
      },
      "attributes": {
        "title": {
          "type": "string",
          "required": true
        },
        "value": {
          "type": "string",
          "required": true
        },
        "description": {
          "type": "text"
        },
        "icon": {
          "type": "string",
          "default": "users"
        },
        "category": {
          "type": "enumeration",
          "enum": ["beneficiaries", "programs", "communities", "volunteers", "funds"],
          "default": "beneficiaries"
        },
        "order": {
          "type": "integer",
          "default": 0
        },
        "isActive": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "hero-sections": {
      "kind": "collectionType",
      "collectionName": "hero_sections",
      "info": {
        "singularName": "hero-section",
        "pluralName": "hero-sections",
        "displayName": "Hero Section",
        "description": "Homepage hero content"
      },
      "options": {
        "draftAndPublish": false
      },
      "attributes": {
        "title": {
          "type": "string",
          "required": true
        },
        "subtitle": {
          "type": "text",
          "required": true
        },
        "description": {
          "type": "text"
        },
        "backgroundImage": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        },
        "primaryButtonText": {
          "type": "string",
          "default": "Donate Now"
        },
        "primaryButtonUrl": {
          "type": "string",
          "default": "/donate"
        },
        "secondaryButtonText": {
          "type": "string",
          "default": "Volunteer"
        },
        "secondaryButtonUrl": {
          "type": "string",
          "default": "/volunteer"
        },
        "isActive": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "global-settings": {
      "kind": "singleType",
      "collectionName": "global_settings",
      "info": {
        "singularName": "global-settings",
        "pluralName": "global-settings",
        "displayName": "Global Settings",
        "description": "Site-wide configuration"
      },
      "options": {
        "draftAndPublish": false
      },
      "attributes": {
        "siteName": {
          "type": "string",
          "required": true,
          "default": "Adlai Heroes Foundation"
        },
        "siteDescription": {
          "type": "text",
          "required": true
        },
        "logo": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        },
        "favicon": {
          "type": "media",
          "multiple": false,
          "required": false,
          "allowedTypes": ["images"]
        },
        "contactEmail": {
          "type": "email",
          "required": true
        },
        "contactPhone": {
          "type": "string"
        },
        "address": {
          "type": "text"
        },
        "socialMedia": {
          "type": "json"
        },
        "donationUrl": {
          "type": "string"
        },
        "footerText": {
          "type": "text"
        },
        "metaTitle": {
          "type": "string",
          "maxLength": 60
        },
        "metaDescription": {
          "type": "text",
          "maxLength": 160
        }
      }
    }
  }
}